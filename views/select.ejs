<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
        Robot Selection
    </title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../styles.css">

</head>

<body>

    <div class="container text-center mw-540 p-3">
        <h3 class="mt-4 mb-5">ü§ñ Telepresence Robot Portal</h3>
    </div>
    <div class="container-fluid bg-primary">
        <div class="container mw-540 px-3 py-2">
            <div class=" d-flex">
                <div class="d-flex py-2 me-auto">
                    <h6 class="my-auto text-white">Welcome,<br><b>
                            <%= email %>!
                        </b></h6>
                </div>
                <div class="d-flex py-2">
                    <form method="POST" action="/logout">
                        <button type="submit" class="btn btn-light">üèÉüèº Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container mw-540 p-3">

        <% if (err != 'none') { %>
            <div class="alert alert-danger" role="alert">
                <%= err %>
            </div>
            <% } %>

        <h6 class="mx-3">Connect to a robot</h6>

        <% Object.keys(robots).forEach(function(uuid) { %>
            <div class="d-flex bg-light text-black mx-2 mt-3 mb-2 px-4 py-3 rounded">
                <div class="d-flex me-auto">
                    <h6 class="my-auto">ü§ñ<b class="text-primary">
                            <%= robots[uuid].name %>
                        </b> ‚Äî <%= robots[uuid].location %>
                    </h6>
                </div>
                <form method="GET" action="/<%= uuid %> %>">
                    <% if (activeRobots.includes(uuid)) { %>
                        <button type="submit" class="btn btn-success">üîåConnect</button>
                        <% } else { %>
                            <button type="submit" class="btn btn-danger" disabled>‚ùåOffline</button>
                            <% } %>
                </form>
            </div>
            <% }) %>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
</body>

</html>